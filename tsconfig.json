{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["es6", "es2015"],
      "types": ["node"],
      "outDir": "dist",
      "rootDir": "src",
      "declaration": true,
    },
    "exclude": [
      "dist",
      "node_modules"
    ],
    "include": [
      "src"
    ]
}